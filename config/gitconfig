[user]
	name = Joshua Nelson
	email = github@jyn.dev
	signingkey = E655823D8D8B1088
[credential]
	helper = store
[push]
	default = current
[core]
	eol = lf
	editor = vim
	preloadindex = true
	excludesfile = ~/.gitignore
	autocrlf = false
	pager = delta
[alias]
	save = git-save
	update = submodule update
	conf = config
	module = submodule
	deepen = git pull --unshallow
	unshallow = git pull --unshallow
	a = add
	b = branch
	c = commit
	conf = config
	d = diff
	h = help
	l = log --graph --all --oneline --date=format:'%Y-%m-%d %H:%M' --format=format:'%C(auto)%h %C(green)%cd%C(auto) %s%d'
	graph = l
	r = remote
	s = status -sb --ignore-submodules
	t = tag
	v = !git --version
	recent = for-each-ref --sort=committerdate --format='%(committerdate:short): %(refname:short): %(contents:subject)' refs/heads/
	signed = log --show-signature
	default-branch = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
	autosquash = !git revise $(git merge-base HEAD origin/HEAD) --autosquash -i
	fixup = commit --fixup
[diff]
	algorithm = minimal
[submodule]
	fetchJobs = 4
[merge]
	tool = vimdiff
	conflictstyle = diff3
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = jyn514@gmail.com
[pull]
	rebase = true
[feature]
	manyFiles = true
# otherwise git has a nasty habit of putting stmpPass in a common file
[include]
	path = ~/.local/gitconfig
[rebase]
	autostash = true
[commit]
	verbose = true
[protocol "file"]
	allow = always
