# See https://git-scm.com/docs/git-config#_configuration_file for docs
[user]
	name = jyn
[credential]
	helper = store
[push]
	default = current
	autoSetupRemote = true
[core]
	eol = lf
	editor = code --wait
	preloadindex = true
	autocrlf = false
	excludesfile = ~/.config/git/ignore
	hooksPath = ~/.config/git/hooks
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	hyperlinks = true
	# hyperlinks-file-link-format = "file://{path}#{line}"
	hyperlinks-file-link-format = "vscode://file/{path}:{line}"
	# line-numbers = true
[alias]
	save = git-save
	update = submodule update
	conf = config
	module = submodule
	deepen = git pull --unshallow
	unshallow = git pull --unshallow
	a = add
	b = branch
	c = commit
	conf = config
	pure-diff = -c core.pager= diff
	d = diff
	h = help
	l = log --graph --oneline --format=format:'%C(auto)%h %s%d %C(green)%cr %C(bold blue)<%an>%C(auto)'
	branch-log = !git l $(git merge-base HEAD origin/HEAD)..
	graph = l --all
	r = remote
	s = status -sb
	t = tag
	v = !git --version
	recent = for-each-ref --sort=committerdate --format='%(committerdate:short): %(refname:short): %(contents:subject)' refs/heads/
	signed = log --show-signature
	default-branch = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
	autosquash = !git revise $(git merge-base HEAD origin/HEAD) --autosquash -i
	fixup = commit --fixup
	delete-merged = !git branch -a --merged | grep personal | tail -n+2  | cut -d/ -f3- | xargs git push personal --delete --no-verify
[status]
	showUntrackedFiles = all
[diff]
	external = difft
	algorithm = minimal
	colorMoved = dimmed-zebra
	colorMovedWS = allow-indentation-change
[checkout]
	workers = 0
[fetch]
	recurseSubmodules = no
	parallel = 0
[merge]
	tool = vimdiff
	conflictstyle = diff3
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
[pull]
	rebase = true
[feature]
	manyFiles = true
# otherwise git has a nasty habit of putting stmpPass in a common file
[include]
	path = ~/.local/gitconfig
[rebase]
	autostash = true
[commit]
	verbose = true
[protocol "file"]
	allow = always
[rerere]
	enabled = true
[advice]
	detachedHead = false
[init]
	defaultBranch = main
[am]
	threeWay = true
[log]
	follow = true

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
