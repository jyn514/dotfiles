DOTFILES=$(dirname "$(realpath ~/.profile)")/..

add_path () {
	if ! echo "$PATH" | grep -F "(^|:)$1(:|$)" >/dev/null 2>&1; then
		PATH="$1:$PATH"
	fi
}

add_path_if_present() {
	if [ -d "$1" ]; then
		add_path "$1"
	fi
}

